<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col md:flex-row items-start px-4 md:px-20 py-10 md:py-20 gap-10 bg-gray-50">

  <!-- Product Card -->
  <div class="w-full md:w-[30%] rounded-md overflow-hidden shadow-md bg-white">
    <!-- Product Image -->
    <div class="w-full h-64 md:h-80 flex justify-center items-center bg-[#<%= product.bgcolor %>]">
      <img class="max-h-60 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="no image">
    </div>

    <!-- Product Title + Counter -->
    <div class="w-full flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 px-5 py-4 bg-[#<%= product.panelcolor %>]">
      <h3 class="text-2xl font-semibold">Clinge Bag</h3>
      <div class="flex items-center gap-2">
        <button class="w-8 h-8 bg-gray-100 hover:bg-gray-200 text-gray-700 flex rounded-full items-center justify-center shadow">
          <i class="ri-add-line"></i>
        </button>
        <div class="px-3 py-1 rounded-md bg-white text-black border">01</div>
        <button class="w-8 h-8 bg-gray-100 hover:bg-gray-200 text-gray-700 flex rounded-full items-center justify-center shadow">
          <i class="ri-subtract-line"></i>
        </button>
      </div>
    </div>

    <!-- Net Total -->
    <div class="flex items-center justify-between text-white px-5 py-3 bg-[#<%= product.textcolor %>]">
      <h4 class="text-lg font-medium">Net Total</h4>
      <h2 class="text-lg font-semibold">₹ <%= (product.price + 20 - (product.discount || 0)) %></h2>
    </div>
  </div>

  <!-- Price Breakdown Section -->
  <div class="w-full md:w-[70%] bg-white rounded-md shadow-md p-6">
    <h3 class="text-xl font-semibold text-gray-800">Price Breakdown</h3>

    <div class="px-0 md:px-10 mt-5 space-y-3 text-gray-700">
      <div class="flex justify-between">
        <h4>Total MRP</h4>
        <h4>₹ <%= product.price %></h4>
      </div>
      <div class="flex justify-between">
        <h4>Discount on MRP</h4>
        <h4>₹ <%= product.discount || 0 %></h4>
      </div>
      <div class="flex justify-between">
        <h4>Platform Fee</h4>
        <h4>₹ 20</h4>
      </div>
      <div class="flex justify-between">
        <h4>Shipping Fee</h4>
        <h4 class="text-green-600 font-medium">FREE</h4>
      </div>
    </div>

    <div class="w-full h-[1px] bg-gray-300 mt-10"></div>

    <div class="flex justify-between items-center mt-5">
      <h3 class="text-xl font-semibold">Total Amount</h3>
      <h3 class="font-bold text-xl text-green-600">
        ₹ <%= (product.price + 20 - (product.discount || 0)) %>
      </h3>
    </div>

    <!-- Checkout Button (optional) -->
    <form action="" class="mt-6">
      <button type="submit" class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-md shadow transition">
        Proceed to Checkout
      </button>
    </form>
  </div>

</div>

<%- include('./partials/footer') %>
